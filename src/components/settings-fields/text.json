{
  "collectionName": "components_style_description_settings",
  "info": {
    "displayName": "Text",
    "icon": "apps",
    "description": ""
  },
  "options": {},
  "attributes": {
    "font_size": {
      "type": "float"
    },
    "font_size_unit": {
      "type": "enumeration",
      "enum": [
        "px",
        "percent",
        "em",
        "rem",
        "vw"
      ],
      "default": "px"
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "text_align": {
      "type": "enumeration",
      "enum": [
        "left",
        "center",
        "right"
      ]
    },
    "line_height": {
      "type": "decimal"
    },
    "font_weight": {
      "type": "enumeration",
      "enum": [
        "normal",
        "semibold",
        "bold",
        "black",
        "x300",
        "x400",
        "x500",
        "x600",
        "x700",
        "x800"
      ],
      "default": "normal"
    },
    "margin": {
      "type": "string"
    },
    "margin_unit": {
      "type": "enumeration",
      "enum": [
        "px",
        "percent",
        "em",
        "rem",
        "vw"
      ],
      "default": "px"
    },
    "padding": {
      "type": "string"
    },
    "padding_unit": {
      "type": "enumeration",
      "enum": [
        "px",
        "percent",
        "em",
        "rem",
        "vw"
      ],
      "default": "px"
    },
    "text_transform": {
      "type": "enumeration",
      "enum": [
        "none",
        "uppercase",
        "lowercase",
        "capitalize"
      ]
    }
  }
}
